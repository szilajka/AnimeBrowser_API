{
  "Serilog": {
    "Using": [ "Serilog.Sinks.File", "Serilog.Expressions" ],
    "MinimumLevel": {
      "Default": "Debug",
      "Override": {
        "Microsoft": "Warning",
        "Microsoft.EntityFrameworkCore.Database.Command": "Information"
      }
    },
    "WriteTo": [
      {
        "Name": "Async",
        "Args": {
          "configure": [
            {
              "Name": "File",
              "Args": {
                "path": "Logs/Dev/anime_browser.txt",
                "rollingInterval": "Day",
                "outputTemplate": "{Timestamp:o} [{Level:u3}] ({Application}/{MachineName}/{ThreadId}/{ThreadName}) {Message}{NewLine}{Exception}"
              }
            }
          ]
        }
      },
      {
        "Name": "Async",
        "Filter": [
          {
            "Name": "ByIncludingOnly",
            "Args": {
              "expression": "@l = Error"
            }
          }
        ],
        "Args": {
          "configure": [
            {
              "Name": "File",
              "Args": {
                "path": "Logs/Dev/anime_browser_error.txt",
                "rollingInterval": "Day",
                "outputTemplate": "{Timestamp:o} [{Level:u3}] ({Application}/{MachineName}/{ThreadId}/{ThreadName}) {Message}{NewLine}{Exception}"
              }
            }
          ]
        }
      }
    ]
  },
  //"Logging": {
  //  "LogLevel": {
  //    "Default": "Information",
  //    "Microsoft": "Warning",
  //    "Microsoft.Hosting.Lifetime": "Information",
  //    "Microsoft.EntityFrameworkCore.Database.Command": "Information"
  //  }
  //},
  "ConnectionStrings": {
    "AnimeBrowser": "Server=localhost;Port=5432;Database=anime_browser;User Id=ab_user;Password=ab_admin;"
  },
  "IdentityServerSettings": {
    //"AuthorityUrl": "https://localhost:44310"
    "AuthorityUrl": "https://localhost:9025",
    "ValidAudiences": [ "AnimeBrowser_API", "AnimeBrowser_API_Admin" ],
    "TokenValidationClaimName": "name",
    "TokenValidationClaimRole": "role"
  }
}
